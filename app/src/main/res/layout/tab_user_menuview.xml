<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    >
    <TextView
        android:id="@+id/tv_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="轮播广告"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_15"
        android:padding="@dimen/dimen_15"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimen_10"
        android:drawableLeft="@drawable/user_cache"
        android:drawablePadding="@dimen/dimen_10"
        />

    <TextView
        android:id="@+id/tv_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的收藏"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_15"
        android:background="@color/white"
        android:padding="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_1"
        android:drawableLeft="@drawable/user_collect"
        android:drawablePadding="@dimen/dimen_10"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_video_adv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="视频广告"
        android:padding="@dimen/dimen_15"
        android:textColor="@color/text_color"
        android:background="@color/white"
        android:drawableLeft="@drawable/user_grade"
        android:drawablePadding="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_1"
        />
    <TextView
        android:id="@+id/tv_show_slideable_spot_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="轮播插屏广告"
        android:textSize="@dimen/text_15"
        android:textColor="@color/text_color"
        android:padding="@dimen/dimen_15"
        android:drawableLeft="@drawable/user_play_history"
        android:drawablePadding="@dimen/dimen_10"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimen_1"
        />

    <TextView
        android:id="@+id/tv_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="积分余额"
        android:textSize="@dimen/text_15"
        android:textColor="@color/text_color"
        android:padding="@dimen/dimen_15"
        android:drawableLeft="@drawable/user_response"
        android:drawablePadding="@dimen/dimen_10"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimen_10"
        />

    <TextView
        android:id="@+id/tv_thump_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="收到的赞"
        android:textSize="@dimen/text_15"
        android:textColor="@color/text_color"
        android:padding="@dimen/dimen_15"
        android:drawableLeft="@drawable/user_thumb_up"
        android:drawablePadding="@dimen/dimen_10"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimen_1"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="系统通知"
        android:textSize="@dimen/text_15"
        android:textColor="@color/text_color"
        android:padding="@dimen/dimen_15"
        android:drawableLeft="@drawable/system_notify"
        android:drawablePadding="@dimen/dimen_10"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimen_1"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置"
        android:textSize="@dimen/text_15"
        android:textColor="@color/text_color"
        android:padding="@dimen/dimen_15"
        android:drawableLeft="@drawable/setting"
        android:drawablePadding="@dimen/dimen_10"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimen_1"
        android:layout_marginBottom="@dimen/dimen_80"/>


</LinearLayout>