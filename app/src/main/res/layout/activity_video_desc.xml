<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/root_view"
    android:fitsSystemWindows="true"
    android:background="@android:color/transparent"
    >
    <FrameLayout
        android:id="@+id/id_framelayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        >
        <demo.soho.com.baogevideo.ui.widget.LandLayoutVideo
            android:id="@+id/detail_player"
            android:layout_width="match_parent"
            android:layout_height="202dp"
            />
        <LinearLayout
            android:id="@+id/ll_share_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/dimen_40"
            android:paddingLeft="@dimen/dimen_40"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#99000000"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享至"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12"/>
           
        </LinearLayout>

    </FrameLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/toolbar_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:fillViewport="false"
        app:layout_scrollFlags="scroll"
        app:tabIndicatorColor="@color/text_red"
        app:tabIndicatorHeight="1.0dp"
        app:tabSelectedTextColor="@color/text_red"
        app:tabTextColor="#8c8c8c"
        >
    </android.support.design.widget.TabLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/lightgrey"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2.1"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />
</LinearLayout>
