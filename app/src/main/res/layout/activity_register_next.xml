<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222">
    <ImageButton
        android:id="@+id/id_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_white"
        android:background="@null"
        android:padding="@dimen/dimen_15"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_50"
        android:layout_marginTop="@dimen/dimen_100">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15"
            />
        <EditText
            android:id="@+id/etv_username"
            style="@style/style_common_width_height_mw"
            android:layout_centerVertical="true"
            android:layout_below="@+id/tv_code"
            android:layout_marginTop="@dimen/dimen_5"
            android:gravity="center|left"
            android:hint="10个字以内"
            android:inputType="text"
            android:singleLine="true"
            android:textColorHint="@color/text_color"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_toLeftOf="@+id/btn_get_code"
            android:background="@null"
            android:theme="@style/MyEditText"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/lightgrey"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30"
            android:text="密码"
            android:textSize="@dimen/text_15"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/etv_password"
            style="@style/style_common_width_height_mw"
            android:layout_centerVertical="true"
            android:layout_below="@+id/tv_code"
            android:layout_marginTop="@dimen/dimen_5"
            android:gravity="center|left"
            android:hint="6位以上的字母和数字"
            android:inputType="text"
            android:singleLine="true"
            android:textColorHint="@color/text_color"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_toLeftOf="@+id/btn_get_code"
            android:background="@null"
            android:theme="@style/MyEditText"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/lightgrey"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15"
            android:layout_marginTop="@dimen/dimen_30"/>

        <EditText
            android:id="@+id/etv_confirm_password"
            style="@style/style_common_width_height_mw"
            android:layout_centerVertical="true"
            android:layout_below="@+id/tv_code"
            android:layout_marginTop="@dimen/dimen_5"
            android:gravity="center|left"
            android:hint="6位以上的字母和数字"
            android:inputType="text"
            android:singleLine="true"
            android:textColorHint="@color/text_color"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_toLeftOf="@+id/btn_get_code"
            android:background="@null"
            android:theme="@style/MyEditText"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/lightgrey"/>


        <TextView
            android:id="@+id/id_achieve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15"
            android:padding="@dimen/text_10"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_30"
            android:background="@drawable/bg_login_selector"
            />
    </LinearLayout>

</LinearLayout>